{
  "name": "vigil3",
  "displayName": "vigil3",
  "description": "Vigil3 is a VS Code extension that integrates Vigil3's smart contract security features directly into your development environment. It provides real-time vulnerability detection, security analysis, and best practice recommendations as you write and deploy smart contracts, helping developers enhance the security of their blockchain applications effortlessly.",
  "version": "0.0.5",
  "publisher": "EvaHerson",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vigil3.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "solidity",
        "extensions": [
          ".sol"
        ],
        "aliases": [
          "Solidity",
          "solidity"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.12",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "~5.8.0"
  },
  "type": "module",
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "hardhat": "^3.0.9",
    "vigil3": "^1.20.0"
  }
}
